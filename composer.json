{
  "name": "wkhayrattee/wordpress-with-composer",
  "description": "This is a base setup for using WordPress with composer & git workflow. See the readme of usage.",
  "keywords": ["wordpress", "use composer with wordpress", "wordpress composer", "composer wordpress", "wordpress with composer"],
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "Wasseem Khayrattee",
      "email": "hey@wk.contact",
      "homepage": "https://wk.contact/"
    }
  ],
  "type": "project",
  "minimum-stability": "dev",
  "config": {
    "vendor-dir": "vendor",
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "7.4"
    },
    "preferred-install": {
      "wkhayrattee/*": "source",
      "*": "dist"
    }
  },
  "extra": {
    "wordpress-install-dir": "public/wp",
    "installer-paths": {
      "public/wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "public/wp-content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "public/wp-content/{$name}/": [
        "type:wordpress-dropin"
      ],
      "public/wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  },
  "require": {
    "vlucas/phpdotenv": "5.4.0",
    "composer/installers": "2.0.1",
    "johnpbloch/wordpress": "5.8.2",
    "wpackagist-theme/twentytwenty": "1.8",
    "wpackagist-plugin/akismet": "4.2.1",
    "wpackagist-plugin/updraftplus": "1.16.65",
    "wpackagist-plugin/wp-optimize": "3.1.12",
    "wpackagist-plugin/google-sitemap-generator": "4.1.1",
    "wpackagist-plugin/wp-seopress": "5.2.0",
    "wpackagist-plugin/ninjafirewall": "4.4.2",
    "wpackagist-plugin/pretty-link": "3.2.4",
    "wpackagist-plugin/wp-cron-status-checker": "1.2.2",
    "wpackagist-plugin/advanced-cron-manager": "2.4.1",
    "wpackagist-plugin/fast-velocity-minify": "3.2.2",
    "wpackagist-plugin/imagekit": "4.1.2",
    "wpackagist-plugin/two-factor": "0.7.1",
    "wpackagist-plugin/host-analyticsjs-local": "4.1.9",
    "wpackagist-plugin/b2-sync": "1.0.0"
  },
  "require-dev": {
    "wpackagist-plugin/query-monitor": "3.7.1",
    "wpackagist-plugin/debug-bar": "1.1.2",
    "roave/security-advisories": "dev-master",
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "wp-coding-standards/wpcs": "*"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org/"
    }
  ]
}
